[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state> <label-mode>

label-dimmed-underline = ${colors.background}

;On editing mode (resize for ex)
label-mode = %mode%
label-mode-background = ${colors.dark}
label-mode-underline = ${colors.fav-purple}
label-mode-padding = 2
label-mode-font = 3

; focus window
label-focused = %index%
label-focused-background = ${colors.royal-blue}
label-focused-underline = ${colors.light-green}
label-focused-padding = 3
label-focused-font = 3

; unfocus window
label-unfocused = %index%
label-unfocused-foreground = ${colors.gray}
label-unfocused-padding = 3
label-unfocused-font = 3

; visible window
label-visible = %index%
label-visible-background = ${colors.dark-gray}
label-visible-underline = ${colors.light}
label-visible-padding = 3
label-visible-font = 3

label-urgent = %index%
label-urgent-background = ${colors.light-red}
label-urgent-underline = ${colors.light}
label-urgent-padding = 3
label-urgent-font = 3


[module/date]
type = internal/date

time = %H:%M:%S
date = %A, %B %d
date-alt = %A, %B %d, %Y
time-alt = %H:%M:%S

format-prefix = "   "
